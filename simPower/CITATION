citHeader("To cite simPower in publications, please use any of:")

year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry(bibtype = "Manual",
         title = "{simPower}: Power analyses by simulation",
         author = c(person("Peter", "Verboon")),
         year = year,
         note = note,
         url = "empty",
         doi = "")

bibentry(bibtype = "Article",
         title = "Power simulation in complex research designs (in preparation)",
         author = c(person("Peter", "Verboon")),
         journal= "PsyArXiv",
         year = 2018,
         url = "")
